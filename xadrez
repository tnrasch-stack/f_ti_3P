//Estamos a criar um jogo de Xadrez com 4 peças que movem-se de maneira específica no tabuleiro.
// As 4 peças são:- BISPO: que se move para a diagnoal superior direita.
//                - TORRE: que se move no eixo x para direita.
//                - RAINHA: que se move para qualquer direção, mas nesse caso 8 casas à esquerda.
//                - CAVALO: que se move no eixo y e x para esquerda e abaixo.

#include <stdio.h>
#include <string.h>
int main() {
  char opcao;
  printf("Bem Vindo ao Xadrez da MateCheck\n");

  while (1) {                                                   // Menu em loop até que seja encerrado'
    printf("Qual peça deseja mover? [B]ispo [T]orre [R]ainha [C]avalo ou [S]air\n");
    scanf(" %c", &opcao);                                
    if (opcao == 'B' || opcao == 'b') {                         // Condicionantes, quando uma condição for atendida a linha de código interna será executada
        printf("Movendo Bispo\n");
        for (int i = 0; i < 5; i++)                             // se opção "B"
        {
            printf("Acima Direita\n");
        }
    } else if (opcao == 'T' || opcao == 't') {
        printf("Movendo Torre.\n");
        for (int i = 0; i < 5; i++)                              // se opção "T"
        {
            printf("Direita\n");
        }
    } else if (opcao == 'R' || opcao == 'r') {
        printf("Movendo Rainha\n");
        for (int i = 0; i < 8; i++)                              // se opção "R"
        {
            printf("Esquerda\n");
        }
    } else if (opcao == 'C' || opcao == 'c') {
        printf("Movendo Cavalo\n");
        for (int i = 0; i != 2; i++)                             // Início do aninhamento FOR + WHILE; Instrução FOR direcionando para baixo
        {
            printf("Abaixo\n");
        }
        int j = 0;
        while (j < 1) {                                          // Quando o FOR for encerrado inciia o WHILE
            printf("Esquerda\n");
            j++;
        }
    } else if (opcao == 'S' || opcao == 's')                     // se opção "S"
    {
        printf("Até logo!\n");
        break;                                                   // Encerra o lastro de repetição -- Pressionado sair --
    } else {
        printf("Opção Inválida\n");                              // Condição de erro/entrada inválida
    }
  }

  return 0;
}
